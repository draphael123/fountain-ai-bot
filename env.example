# Copy this file to .env.local and fill in your values

# LLM Provider (openai or anthropic)
LLM_PROVIDER=openai

# OpenAI API Key (required for embeddings, and if using OpenAI as LLM)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (required if using Anthropic as LLM)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Model selection
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Embedding model
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Document path (relative to project root)
DOCUMENT_PATH=./data/source.docx

# Dev mode (enables re-ingest button on sources page)
DEV_MODE=true

